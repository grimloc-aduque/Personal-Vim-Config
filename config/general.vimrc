
syntax on
filetype plugin on
set nocompatible
set noerrorbells

" Tabs
set tabstop=4 softtabstop=4
set expandtab
set shiftwidth=4
set smartindent
set nowrap

" Navegacion
set nu
set relativenumber
set scrolloff=4

" Busqueda
set incsearch
set nohlsearch
set smartcase

" Splits
" set splitbelow
" set splitright


" Colorscheme
colorscheme sonokai "grubvox, dracula
set background=dark

" Macros
set lazyredraw 

" Portapapeles
set clipboard=unnamedplus 

